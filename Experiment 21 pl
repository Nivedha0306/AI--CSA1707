% hanoi(N, Source, Target, Auxiliary)
% Moves N disks from Source to Target using Auxiliary.
hanoi(1, From, To, _) :-
    format('Move disk from ~w to ~w~n', [From, To]).
hanoi(N, From, To, Aux) :-
    N > 1,
    M is N - 1,
    hanoi(M, From, Aux, To),       % Move N-1 disks to auxiliary
    hanoi(1, From, To, _),         % Move the biggest disk
    hanoi(M, Aux, To, From).       % Move N-1 disks to target
